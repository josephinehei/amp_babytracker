<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    tools:layout_editor_absoluteX="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sleepCategoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:text="Category: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sleepCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="category"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sleeDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Date: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sleepDate"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sleepStartTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sleepStartTime"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sleepStopTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Time: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sleepStopTime"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sleepNotesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Notes: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/sleepNotes"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="TextView"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sleepBtnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="104dp"
                android:text="Edit"
                android:textSize="10sp" />

            <Button
                android:id="@+id/sleepBtnRemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:text="Delete"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>