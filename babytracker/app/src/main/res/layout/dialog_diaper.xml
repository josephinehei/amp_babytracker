<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/diaperEditCategoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Category: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/diaperEditCategory"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/diaperEditCategoryLabel"
        app:layout_constraintStart_toEndOf="@+id/diaperEditCategoryLabel" />

    <TextView
        android:id="@+id/diaperEditDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Date: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diaperEditCategoryLabel" />

    <EditText
        android:id="@+id/diaperEditDate"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:inputType="date"
        app:layout_constraintBaseline_toBaselineOf="@+id/diaperEditDateLabel"
        app:layout_constraintStart_toEndOf="@+id/diaperEditDateLabel" />

    <TextView
        android:id="@+id/diaperEditTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Time: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diaperEditDateLabel" />

    <EditText
        android:id="@+id/diaperEditTime"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:inputType="time"
        app:layout_constraintBaseline_toBaselineOf="@+id/diaperEditTimeLabel"
        app:layout_constraintStart_toEndOf="@+id/diaperEditTimeLabel" />

    <TextView
        android:id="@+id/diaperEditDiaperTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Diaper Type: "
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="201dp" />

    <EditText
        android:id="@+id/diaperEditDiaperType"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/diaperEditDiaperTypeLabel"
        app:layout_constraintStart_toEndOf="@+id/diaperEditDiaperTypeLabel" />

    <TextView
        android:id="@+id/diaperEditDiaperColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Color: "
        app:layout_constraintStart_toEndOf="@+id/diaperEditDiaperType"
        tools:layout_editor_absoluteY="201dp" />

    <EditText
        android:id="@+id/diaperEditDiaperColor"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/diaperEditDiaperColorLabel"
        app:layout_constraintStart_toEndOf="@+id/diaperEditDiaperColorLabel" />

    <TextView
        android:id="@+id/diaperEditNotesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Notes: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diaperEditDiaperTypeLabel" />

    <EditText
        android:id="@+id/diaperEditNotes"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/diaperEditNotesLabel"
        app:layout_constraintStart_toEndOf="@+id/diaperEditNotesLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>